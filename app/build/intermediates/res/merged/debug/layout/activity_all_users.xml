<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.sahajarora.socialnetwork.AllUsersActivity">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Users in the Network"
               android:textSize="30sp"
               android:textStyle="bold"
               android:layout_gravity="center_horizontal" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:layout_marginTop="10sp"
               android:textSize="25sp"
               android:textStyle="bold"
               android:text="Producers: "
               />

           <ListView
               android:layout_marginTop="10sp"
               android:layout_width="fill_parent"
               android:layout_height="162dp"
               android:id="@+id/listProducers"
               android:background="#eaca89"></ListView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:layout_marginTop="10sp"
               android:textSize="25sp"
               android:textStyle="bold"
               android:text="Consumers: "
               />

           <ListView
               android:layout_marginTop="10sp"
               android:layout_width="fill_parent"
               android:layout_height="162dp"
               android:id="@+id/listConsumers"
               android:background="#eaca89"></ListView>


</LinearLayout>
