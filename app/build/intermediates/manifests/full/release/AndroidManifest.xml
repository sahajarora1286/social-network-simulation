                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sahajarora.socialnetwork.ChosenUsersActivity" >
        </activity>
        <activity android:name="com.sahajarora.socialnetwork.AllUsersActivity" >
        </activity>
        <activity android:name="com.sahajarora.socialnetwork.UserProfileActivity" >
        </activity>
        <activity
            android:name="com.sahajarora.socialnetwork.FollowersActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.sahajarora.socialnetwork.FollowingActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.sahajarora.socialnetwork.DocumentsLikedActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
